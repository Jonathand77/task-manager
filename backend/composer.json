{
  "name": "task-manager/backend",
  "description": "Task Manager API - Phalcon PHP",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "phalcon/cphalcon": "^5.0",
    "firebase/php-jwt": "^6.8",
    "vlucas/phpdotenv": "^5.5",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\": "database/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs app/",
    "stan": "phpstan analyse app/"
  }
}
